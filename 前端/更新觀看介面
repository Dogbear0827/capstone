    <script>
        // è³‡æ–™æ“ä½œå’ŒåŠŸèƒ½
        const followedList = [];

        function toggleFollow(streamer) {
            if (followedList.includes(streamer)) {
                followedList.splice(followedList.indexOf(streamer), 1);
                alert('å·²å–æ¶ˆè¿½éš¨ ' + streamer);
                document.getElementById("follow-btn").innerText = "è¿½éš¨";
            } else {
                followedList.push(streamer);
                alert('å·²è¿½éš¨ ' + streamer);
                document.getElementById("follow-btn").innerText = "å–æ¶ˆè¿½éš¨";
            }
            updateFollowedList();
        }

        function updateFollowedList() {
            const followedListContainer = document.getElementById("followed-list");
            followedListContainer.innerHTML = '';
            followedList.forEach(streamer => {
                const li = document.createElement('li');
                li.classList.add('followed-streamer');
                li.innerText = streamer;
                followedListContainer.appendChild(li);
            });
        }

        // Emoji Picker åŠŸèƒ½
        function toggleEmojiPicker() {
            const emojiPicker = document.getElementById("emoji-picker");
            emojiPicker.style.display = emojiPicker.style.display === "block" ? "none" : "block";
        }

        function addEmoji(emoji) {
            document.getElementById("chat-input").value += emoji;
            toggleEmojiPicker();
        }

        // èŠå¤©åŠŸèƒ½
        function sendMessage() {
            const message = document.getElementById("chat-input").value;
            if (message.trim() !== '') {
                const messageContainer = document.getElementById("messages");
                const messageElement = document.createElement("div");
                messageElement.textContent = message;
                messageContainer.appendChild(messageElement);
                document.getElementById("chat-input").value = '';  // æ¸…ç©ºè¼¸å…¥æ¡†
            }
        }

        // è¨‚é–± Modal é¡¯ç¤ºå’Œé—œé–‰
        function showSubscriptionModal() {
            document.getElementById('subscriptionModal').style.display = 'flex';
        }

        function confirmSubscription() {
            alert('æ‚¨å·²æˆåŠŸè¨‚é–±ï¼');
            closeModal();
        }

        function closeModal() {
            document.getElementById('subscriptionModal').style.display = 'none';
        }

        // é€ç¦®è¦–çª—é¡¯ç¤ºå’Œé—œé–‰
        function showGiftModal() {
            document.getElementById('giftModal').style.display = 'flex';
        }

        function closeGiftModal() {
            document.getElementById('giftModal').style.display = 'none';
        }

        function selectGift(gift) {
            alert(`å·²é¸æ“‡é€å‡º ${gift}`);
            closeGiftModal();
        }

        function confirmGift() {
            alert('æ‚¨å·²æˆåŠŸé€å‡ºç¦®ç‰©ï¼');
            closeGiftModal();
        }
    <script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
    <script src="webrtc.js"></script>

        // Follow Modal
        function closeFollowModal() {
            document.getElementById('followModal').style.display = 'none';
        }

        // WebSocketé€£æ¥
        function showConnectionModal() {
            document.getElementById('connectionModal').style.display = 'flex';
        }

        // é–‹å•Ÿå’Œé—œé–‰ WebSocket é€£æ¥
        function openConnection() {
            showConnectionModal();
            // å‡è¨­é€£æ¥æˆåŠŸå¾Œæœƒè‡ªå‹•é—œé–‰é€™å€‹ modal
            setTimeout(() => {
                document.getElementById('connectionModal').style.display = 'none';
            }, 3000);
        }

        // åˆå§‹åŒ–
        openConnection();
    </script>
