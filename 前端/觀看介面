    <script>
        const userName = "User123";
        const followedList = document.getElementById('followed-list');
        let followedStreamers = [];  // å­˜å„²å·²è¿½éš¨çš„å¯¦æ³ä¸»

        // åˆ‡æ›è¿½éš¨ç‹€æ…‹
        function toggleFollow(streamerName) {
            const followButton = document.getElementById('follow-btn');
            if (followedStreamers.includes(streamerName)) {
                // å–æ¶ˆè¿½éš¨
                followedStreamers = followedStreamers.filter(name => name !== streamerName);
                followButton.textContent = 'è¿½éš¨';
                removeFollowedStreamer(streamerName);
            } else {
                // è¿½éš¨
                followedStreamers.push(streamerName);
                followButton.textContent = 'å–æ¶ˆè¿½éš¨';
                addFollowedStreamer(streamerName);
            }
        }

        // æ·»åŠ è¿½éš¨çš„å¯¦æ³ä¸»åˆ°å´é‚Šæ¬„
        function addFollowedStreamer(streamerName) {
            const listItem = document.createElement('li');
            listItem.classList.add('followed-streamer');
            listItem.textContent = `å·²è¿½éš¨ï¼š${streamerName}`;
            followedList.appendChild(listItem);
        }

        // å¾å´é‚Šæ¬„ç§»é™¤è¿½éš¨çš„å¯¦æ³ä¸»
        function removeFollowedStreamer(streamerName) {
            const listItems = followedList.getElementsByTagName('li');
            for (let item of listItems) {
                if (item.textContent === `å·²è¿½éš¨ï¼š${streamerName}`) {
                    followedList.removeChild(item);
                    break;
                }
            }
        }

        // é¡¯ç¤ºè¨‚é–±è¦–çª—
        function showSubscriptionModal() {
            document.getElementById('subscriptionModal').style.display = 'flex';
        }

        // è¨‚é–±ç¢ºèª
        function confirmSubscription() {
            addMessageToChat(`${userName}: æ„Ÿè¬æ‚¨çš„è¨‚é–±!!`);
            closeModal();
        }

        // é—œé–‰è¨‚é–±è¦–çª—
        function closeModal() {
            document.getElementById('subscriptionModal').style.display = 'none';
        }

        // é¡¯ç¤ºé€ç¦®è¦–çª—
        function showGiftModal() {
            document.getElementById('giftModal').style.display = 'flex';
        }

        // é€ç¦®åŠŸèƒ½
        function sendGift(giftName, price) {
            addMessageToChat(`${userName}: æ„Ÿè¬æ‚¨çš„é€ç¦® (${giftName})`);
            closeGiftModal();
        }

        // é—œé–‰é€ç¦®è¦–çª—
        function closeGiftModal() {
            document.getElementById('giftModal').style.display = 'none';
        }

        // é¡¯ç¤ºå·²è¿½éš¨æç¤º
        function closeFollowModal() {
            document.getElementById('followModal').style.display = 'none';
        }

        // ç™¼é€è¨Šæ¯åˆ°èŠå¤©å®¤
        function sendMessage() {
            const message = document.getElementById('chat-input').value;
            if (message.trim()) {
                addMessageToChat(`${userName}: ${message}`);
                document.getElementById('chat-input').value = '';
            }
        }

        // æ·»åŠ è¨Šæ¯åˆ°èŠå¤©å®¤
        function addMessageToChat(message) {
            const messagesDiv = document.getElementById('messages');
            messagesDiv.innerHTML += `<p>${message}</p>`;
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }

        // é¡¯ç¤ºè¡¨æƒ…ç¬¦è™Ÿé¸æ“‡å™¨
        function toggleEmojiPicker() {
            const picker = document.getElementById('emoji-picker');
            picker.style.display = picker.style.display === 'none' || picker.style.display === '' ? 'block' : 'none';
        }

        // æ·»åŠ è¡¨æƒ…ç¬¦è™Ÿåˆ°è¼¸å…¥æ¡†
        function addEmoji(emoji) {
            const input = document.getElementById('chat-input');
            input.value += emoji;
            toggleEmojiPicker();
        }

        // WebRTC ç›¸é—œåŠŸèƒ½
        let localStream;
        let peerConnection;
        const videoElement = document.getElementById('webRTCVideo');

        // åˆå§‹åŒ– WebRTC é€£æ¥
        function initializeWebRTC() {
            // é è¨­è¨­å®š
            const configuration = {
                iceServers: [{ urls: 'stun:stun.l.google.com:19302' }]  // ä½¿ç”¨Googleçš„STUNä¼ºæœå™¨
            };
            peerConnection = new RTCPeerConnection(configuration);

            // è¨­å®š WebRTC é€£æ¥
            peerConnection.onicecandidate = (event) => {
                if (event.candidate) {
                    console.log('æ–°ICEå€™é¸:', event.candidate);
                    // ç™¼é€candidateåˆ°å°æ–¹
                }
            };

            peerConnection.ontrack = (event) => {
                // æ’­æ”¾æ¥æ”¶åˆ°çš„è¦–è¨Šæµ
                videoElement.srcObject = event.streams[0];
            };

            // å–å¾—æœ¬åœ°è¦–è¨Šæµä¸¦å°‡å…¶å‚³é€åˆ°å°æ–¹
            navigator.mediaDevices.getUserMedia({ video: true, audio: true })
                .then((stream) => {
                    localStream = stream;
                    videoElement.srcObject = localStream;
                    localStream.getTracks().forEach(track => peerConnection.addTrack(track, localStream));
                })
                .catch((error) => {
                    console.error('ç„¡æ³•å•Ÿå‹•ç›¸æ©Ÿæˆ–éº¥å…‹é¢¨:', error);
                });
        }

        // å•Ÿå‹• WebRTC
        initializeWebRTC();
    </script>
