    <script>
        const userName = "User123";

        // ç™¼é€èŠå¤©å®¤æ¶ˆæ¯
        document.getElementById('send-button').addEventListener('click', function() {
            const input = document.getElementById('chat-input');
            const message = input.value;
            if (message) {
                addMessageToChat(`${userName}: ${message}`);
                input.value = '';
            }
        });

        // é¡¯ç¤ºè¨‚é–±è¦–çª—
        function showModal() {
            document.getElementById('subscriptionModal').style.display = 'flex';
        }

        // è¨‚é–±ç¢ºèª
        function confirmSubscription() {
            addMessageToChat(`${userName}: æ„Ÿè¬æ‚¨çš„è¨‚é–±!!`);
            closeModal();
        }

        // é—œé–‰è¨‚é–±è¦–çª—
        function closeModal() {
            document.getElementById('subscriptionModal').style.display = 'none';
        }

        // é¡¯ç¤ºé€ç¦®è¦–çª—
        function showGiftModal() {
            document.getElementById('giftModal').style.display = 'flex';
        }

        // é€ç¦®åŠŸèƒ½
        function sendGift(giftName, price) {
            addMessageToChat(`${userName}: æ„Ÿè¬æ‚¨çš„é€ç¦® (${giftName})`);
            closeGiftModal();
        }

        // é—œé–‰é€ç¦®è¦–çª—
        function closeGiftModal() {
            document.getElementById('giftModal').style.display = 'none';
        }

        // é¡¯ç¤ºè¿½éš¨è¦–çª—
        function showFollowModal() {
            document.getElementById('followModal').style.display = 'flex';
        }

        // é—œé–‰è¿½éš¨è¦–çª—
        function closeFollowModal() {
            document.getElementById('followModal').style.display = 'none';
        }

        // å°‡è¨Šæ¯æ–°å¢è‡³èŠå¤©å®¤
        function addMessageToChat(message) {
            const messagesDiv = document.getElementById('messages');
            messagesDiv.innerHTML += `<p>${message}</p>`;
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }

        // æ”¯æ´Enteréµç™¼é€æ¶ˆæ¯
        document.getElementById('chat-input').addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                document.getElementById('send-button').click();
            }
        });

        // é¡¯ç¤ºè¡¨æƒ…ç¬¦è™Ÿé¸æ“‡å™¨
        function toggleEmojiPicker() {
            const picker = document.getElementById('emoji-picker');
            picker.style.display = picker.style.display === 'none' || picker.style.display === '' ? 'block' : 'none';
        }

        // æ·»åŠ è¡¨æƒ…ç¬¦è™Ÿåˆ°è¼¸å…¥æ¡†
        function addEmoji(emoji) {
            const input = document.getElementById('chat-input');
            input.value += emoji;
            toggleEmojiPicker();
        }
    </script>
